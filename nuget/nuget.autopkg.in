configurations {
	UserPlatformToolset {
		// Needed because autopackage lacks VS2015+ support
		key = "PlatformToolset";
		choices: "v140,v141";
	};
}

nuget{
	nuspec{
		id = libpogodi;
		version : $(version);
		title: C++ event waiting library;
		authors: {Ivan Gagis};
		owners: {Ivan Gagis};
		licenseUrl: "https://raw.githubusercontent.com/igagis/pogodi/master/LICENSE";
		projectUrl: "https://github.com/igagis/pogodi";
		iconUrl: "https://github.com/igagis/pogodi/blob/master/logo.svg";
		requireLicenseAcceptance:false;
		summary: C++ event waiting library;

		description: @"C++ event waiting library";
		releaseNotes: "Initial release";
		copyright: Copyright 2015 Ivan Gagis;
		tags: { native};
	}
	dependencies {
		packages : {
			libutki/1.0.22;
		};
	}
	files {
		//this is needed to put headers in the base folder
		nestedInclude: {
			#destination = ${d_include}pogodi;
			"..\src\pogodi\**\*.hpp"
		};

		[x86,v140,release] {
			lib: ..\msvs_solution\v140_Release\libpogodi.lib;
		}

		[x86,v140,debug] {
			lib: ..\msvs_solution\v140_Debug\libpogodi.lib;
		}

		[x64,v140,release] {
			lib: ..\msvs_solution\x64\v140_Release\libpogodi.lib;
		}

		[x64,v140,debug] {
			lib: ..\msvs_solution\x64\v140_Debug\libpogodi.lib;
		}

		[x86,v141,release] {
			lib: ..\msvs_solution\v141_Release\libpogodi.lib;
		}

		[x86,v141,debug] {
			lib: ..\msvs_solution\v141_Debug\libpogodi.lib;
		}

		[x64,v141,release] {
			lib: ..\msvs_solution\x64\v141_Release\libpogodi.lib;
		}

		[x64,v141,debug] {
			lib: ..\msvs_solution\x64\v141_Debug\libpogodi.lib;
		}
	}
}
