{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "build",
			"type": "shell",
			"command": "make",
			"problemMatcher": [
				"$gcc"
			]
		},
		{
			"label": "build_debug",
			"type": "shell",
			"command": "make config=dbg",
			"problemMatcher": [
				"$gcc"
			]
		},
		{
			"label": "test",
			"type": "shell",
			"command": "make test",
			"dependsOn": "build",
			"problemMatcher": []
		},
		{
			"label": "test_debug",
			"type": "shell",
			"command": "make test config=dbg",
			"dependsOn": "build_debug",
			"problemMatcher": []
		},
		{
			"label": "clean-all",
			"type": "shell",
			"command": "make clean-all",
			"problemMatcher": []
		}
	]
}