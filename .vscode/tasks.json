{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "build",
			"type": "shell",
			"command": "make autojobs=true",
			"problemMatcher": [
				"$gcc"
			]
		},
		{
			"label": "build_debug",
			"type": "shell",
			"command": "make autojobs=true debug=true",
			"problemMatcher": [
				"$gcc"
			]
		},
		{
			"label": "test",
			"type": "shell",
			"command": "make test",
			"dependsOn": "build",
			"problemMatcher": []
		},
		{
			"label": "test_deebug",
			"type": "shell",
			"command": "make test debug=true",
			"dependsOn": "build_debug",
			"problemMatcher": []
		},
		{
			"label": "clean",
			"type": "shell",
			"command": "make clean",
			"problemMatcher": []
		}
	]
}