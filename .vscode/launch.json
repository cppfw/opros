    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) wait_set",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/tests/wait_set/tests",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/tests/wait_set",
            "environment": [{"name": "LD_LIBRARY_PATH", "value": "../../src/build"}],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build_debug"
        }
    ]
}